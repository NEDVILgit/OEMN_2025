{
	"name": "Diseña tu Estilo - Dev Env",
	// Usamos docker-compose para orquestar los servicios.
	"dockerComposeFile": "../docker-compose.yml",

	// El servicio al que VS Code se conectará.
	"service": "backend",

	// El directorio de trabajo que se abrirá en VS Code.
	// Ajustado para apuntar directamente a la carpeta del backend.
	"workspaceFolder": "/workspace/backend",

	// Personalizaciones para el entorno de VS Code dentro del contenedor.
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"bradlc.vscode-tailwindcss",
				"mongodb.mongodb-vscode"
			],
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash"
			}
		}
	},
	
	// Comando que se ejecuta DESPUÉS de crear el contenedor por primera vez.
	// Instala las dependencias en frontend y backend para que no tengas que hacerlo manualmente.
	"postCreateCommand": "cd /workspace/frontend && npm install && cd /workspace/backend && npm install --include=dev",

	// Asegura que al cerrar VS Code, se apaguen los contenedores.
	"shutdownAction": "stopCompose"
}